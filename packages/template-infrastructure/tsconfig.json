{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
